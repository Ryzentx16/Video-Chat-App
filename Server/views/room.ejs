<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Set the ROOM_ID variable to the roomId that is passed in by server.js -->
    <script>
      const ROOM_ID = "<%= roomId %>";
    </script>
    <!-- CDN in the peerJS and socket.io libraries -->
    <script
      defer
      src="https://unpkg.com/peerjs@1.5.0/dist/peerjs.min.js"
    ></script>
    <script src="/socket.io/socket.io.js" defer></script>
    <!-- Load in script.js, our client-side script -->
    <script src="script.js" defer></script>
    <title>Video App</title>
    <!-- Make a grid of 300x300 videos  -->
    <style>
      #video-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, 300px);
        grid-auto-rows: 300px;
      }
      video {
        width: 100%;
        height: 100%;
        object-fit: cover;
        margin-right: 10px;
        -webkit-transform: scaleX(-1);
        transform: scaleX(-1);
      }

      #myVideo {
        /* opacity: 50%; */
      }
      .overlayText {
        position: absolute;
        align-items: center;
        /* padding-left: 45%; */
        top: 10px;
        /* left: 50px; */
        width: 300px;
        /* background-color: rgb(74, 73, 73); */
        z-index: 1;
      }

      #topText {
        color: white;
        font-size: 20px;
        align-self: center;
        margin-left: 45%;
      }
      #buttons {
        width: 100%;
        align-items: center;
        padding-left: 45%;
        background-color: red;
      }
    </style>
  </head>
  <body>
    <!-- Make our video grid -->
    <div id="video-grid"></div>
    <div class="overlayText">
      <p id="topText">You</p>
    </div>
    <div id="buttons">
      <button id="disconnectButton" type="button" onclick="myPeer.disconnect()">
        Disconnect
      </button>
    </div>
  </body>
</html>
